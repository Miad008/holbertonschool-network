#!/usr/bin/env bash
# Configure hosts file: map localhost to 127.0.0.2 and facebook.com to 8.8.8.8

# Ensure script is run with sudo
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Backup /etc/hosts before changes
cp /etc/hosts /etc/hosts.bak

# Replace localhost mapping
sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2\tlocalhost/' /etc/hosts

# Add facebook.com mapping (remove old if exists)
sed -i '/facebook\.com/d' /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts
